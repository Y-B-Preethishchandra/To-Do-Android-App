<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <EditText
        android:id="@+id/signupName"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/signupEmail"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signupName"
        android:layout_below="@+id/signupName"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signupName"
        android:layout_below="@+id/signupEmail"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/signupConfirmPassword"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signupName"
        android:layout_below="@+id/passwordInfo"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/passwordInfo"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signupName"
        android:layout_below="@+id/signupPassword"
        android:text="Password must be atleast 6 characters long, contain uppercase, lowercase, number and special character" />

    <Button
        android:id="@+id/signupBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signupSubmit"
        android:text="Back"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signupSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signupConfirmPassword"
        android:text="Submit"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/confpasswordmark"
        android:layout_width="51dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/signupName"
        android:layout_alignTop="@+id/signupConfirmPassword" />

    <ImageView
        android:id="@+id/passwordmark"
        android:layout_width="53dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/confpasswordmark"
        android:layout_alignTop="@+id/signupPassword" />

</RelativeLayout>